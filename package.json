{
  "name": "skeleton-svc",
  "version": "1.0.0",
  "description": "A skeleton backend microservice based in ExpressJs framework containing boilerplate code for a microservice platform projects",
  "main": "build/src/app.js",
  "scripts": {
    "test": "npx tsc --project tsconfig.tests.json && mocha ./build/test/src/**/*.spec.js",
    "build": "npx tsc --project ./",
    "start": "npx tsc --project ./ && nodemon src/app.ts",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "author": "ckkaperonis@gmail.com",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^14.18.33",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "sinon": "^14.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "extMap": {
      "ts": "ts-node"
    }
  }
}

{
  "name": "skeleton-svc",
  "version": "1.0.0",
  "description": "A skeleton backend microservice based in ExpressJs framework containing boilerplate code for a microservice platform projects",
  "main": "build/src/app.js",
  "scripts": {
    "test": "npx tsc --project tsconfig.tests.json && mocha ./dist/test/src/**/*.spec.js",
    "build": "npx tsc --project ./",
    "start": "npx tsc --project ./ && nodemon src/app.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write"
  },
  "author": "ckkaperonis@gmail.com",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^14.18.33",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "sinon": "^15.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "winston": "^3.8.2"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*"
    ],
    "extMap": {
      "ts": "ts-node"
    }
  }
}
